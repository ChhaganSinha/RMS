@if (Show)
{
    <div class="dialog-container" style="width:100%; height:100vh; z-index: 9999 !important; font-size: 12px;">

        <div class="card p-1 bg-light" style="min-width:50%; max-width:80%; max-height:90vh; overflow-y:auto;scrollbar-width:thin;box-shadow: 0 4px 10px rgba(0, 0, 0, 0.9);">

                <div class="card-header" style="padding: 8px !important; display: flex; align-items: center;">
                    <h6 class="m-0">@Title</h6>
                    <a @onclick="Close" title="Close" style="cursor: pointer; margin-left: auto;">
                        <i class="fa fa-times-circle fa-lg text-danger" aria-hidden="true"></i>
                    </a>
                </div>
                <hr class="m-0"/>

            <div class="card-body p-3">
                    <div class="row">
                        <div class="">
                            @ChildContent
                        </div>
                    </div>
                @*    <div style="text-align:center">
                        <button type="button" class="btn btn-outline-secondary col-md-4 mt-3" @onclick="Close">Close</button>
                    </div>*@
                </div>
            </div>


    </div>

}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public EventCallback<bool> ClosePageDialog { get; set; }

    private async Task Close()
    {
        await ClosePageDialog.InvokeAsync(false);
    }

}
